<!DOCTYPE html>
<html lang="ar-iq" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - حسابات مالية</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark navbar-expand-sm">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                ادارة الحسابات المالية
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-list-3" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar-list-3">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            الاقسام
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" dir="rtl">
                            <a asp-action="Index" asp-controller="Employee" class="dropdown-item">الموظفون</a>
                            <a asp-action="Index" asp-controller="Salary" class="dropdown-item">الرواتب</a>
                            <a asp-action="Index" asp-controller="Position" class="dropdown-item">الالقاب العلمية</a>
                            <a asp-action="Index" asp-controller="MarrigeStatus" class="dropdown-item">الحالات الزوجية</a>
                            <a asp-action="Index" asp-controller="Degree" class="dropdown-item">المراحل الوظيفية</a>
                            <a asp-action="Index" asp-controller="Grade" class="dropdown-item">الدرجات الوظيفية</a>
                            <a asp-action="Index" asp-controller="College" class="dropdown-item">الجامعات</a>
                            <a asp-action="Index" asp-controller="Room" class="dropdown-item">غرف القسم</a>
                            <a asp-action="Index" asp-controller="JobTitle" class="dropdown-item">انواع الوظائف</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid text-right" dir="rtl">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - FS </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
